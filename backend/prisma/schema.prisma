generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model User {
  id             Int       @id @default(autoincrement())
  name           String
  email          String    @unique
  passwordHash   String    @map("password_hash")
  role           String    @default("regular")
  phone          String?
  isActive       Boolean   @default(true) @map("is_active")
  profilePicture String?   @map("profile_picture")
  lastActiveAt   DateTime? @map("last_active_at")
  createdAt      DateTime  @default(now()) @map("created_at")
  updatedAt      DateTime  @updatedAt @map("updated_at")

  products      Product[]
  consortiums   Consortium[]
  sales         Sale[]
  notifications Notification[]

  @@map("users")
}

model Product {
  id          Int       @id @default(autoincrement())
  userId      Int       @map("user_id")
  name        String
  description String?
  sku         String?
  unitPrice   Decimal   @map("unit_price")
  costPrice   Decimal   @default(0) @map("cost_price")
  quantity    Int       @default(0)
  minStock    Int       @default(0) @map("min_stock")
  isActive    Boolean   @default(true) @map("is_active")
  createdAt   DateTime  @default(now()) @map("created_at")
  updatedAt   DateTime  @updatedAt @map("updated_at")

  user      User       @relation(fields: [userId], references: [id])
  saleItems SaleItem[]

  @@index([userId])
  @@index([name])
  @@map("products")
}

model Consortium {
  id           Int       @id @default(autoincrement())
  userId       Int       @map("user_id")
  name         String
  description  String?
  totalValue   Decimal   @map("total_value")
  monthlyValue Decimal   @map("monthly_value")
  totalSlots   Int       @map("total_slots")
  startDate    DateTime? @map("start_date")
  endDate      DateTime? @map("end_date")
  status       String    @default("active")
  reminderDaysBefore    Int? @map("reminder_days_before")
  reminderIntervalAfter Int? @map("reminder_interval_after")
  createdAt             DateTime  @default(now()) @map("created_at")
  updatedAt             DateTime  @updatedAt @map("updated_at")

  user         User                    @relation(fields: [userId], references: [id])
  participants ConsortiumParticipant[]
  sales        Sale[]

  @@index([userId])
  @@map("consortiums")
}

model ConsortiumParticipant {
  id           Int       @id @default(autoincrement())
  consortiumId Int       @map("consortium_id")
  name         String
  phone        String?
  email        String?
  document     String?
  slotNumber   Int       @map("slot_number")
  status       String    @default("active")
  joinedAt     DateTime  @default(now()) @map("joined_at")
  createdAt    DateTime  @default(now()) @map("created_at")
  updatedAt    DateTime  @updatedAt @map("updated_at")

  consortium Consortium @relation(fields: [consortiumId], references: [id], onDelete: Cascade)

  @@index([consortiumId])
  @@map("consortium_participants")
}

model Sale {
  id               Int       @id @default(autoincrement())
  userId           Int       @map("user_id")
  personName       String    @map("person_name")
  personPhone      String?   @map("person_phone")
  personEmail      String?   @map("person_email")
  personDocument   String?   @map("person_document")
  totalAmount      Decimal   @map("total_amount")
  installmentCount Int       @default(1) @map("installment_count")
  notes            String?
  status           String    @default("active")
  soldAt                DateTime  @map("sold_at")
  consortiumId          Int?      @map("consortium_id")
  reminderDaysBefore    Int?      @map("reminder_days_before")
  reminderIntervalAfter Int?      @map("reminder_interval_after")
  createdAt             DateTime  @default(now()) @map("created_at")
  updatedAt             DateTime  @updatedAt @map("updated_at")

  user         User          @relation(fields: [userId], references: [id])
  consortium   Consortium?   @relation(fields: [consortiumId], references: [id])
  saleItems    SaleItem[]
  installments Installment[]

  @@index([userId])
  @@index([soldAt])
  @@index([status])
  @@map("sales")
}

model SaleItem {
  id        Int     @id @default(autoincrement())
  saleId    Int     @map("sale_id")
  productId Int     @map("product_id")
  quantity  Int
  unitPrice Decimal @map("unit_price")
  subtotal  Decimal

  sale    Sale    @relation(fields: [saleId], references: [id], onDelete: Cascade)
  product Product @relation(fields: [productId], references: [id])

  @@index([saleId])
  @@index([productId])
  @@map("sale_items")
}

model Installment {
  id              Int       @id @default(autoincrement())
  saleId          Int       @map("sale_id")
  number          Int
  amount          Decimal
  dueDate         DateTime  @map("due_date")
  paidAt          DateTime? @map("paid_at")
  status          String    @default("pending")
  boletoUrl       String?   @map("boleto_url")
  notif1DaySent   Boolean   @default(false) @map("notif_1day_sent")
  notifDueDaySent Boolean   @default(false) @map("notif_dueday_sent")
  notifLateDays   Int       @default(0) @map("notif_late_days")
  lastLateNotifAt DateTime? @map("last_late_notif_at")
  createdAt       DateTime  @default(now()) @map("created_at")
  updatedAt       DateTime  @updatedAt @map("updated_at")

  sale Sale @relation(fields: [saleId], references: [id], onDelete: Cascade)

  @@index([saleId])
  @@index([dueDate])
  @@index([status])
  @@map("installments")
}

model Notification {
  id          Int      @id @default(autoincrement())
  type        String
  content     String
  recipientId Int?     @map("recipient_id")
  isRead      Boolean  @default(false) @map("is_read")
  createdAt   DateTime @default(now()) @map("created_at")

  recipient User? @relation(fields: [recipientId], references: [id])

  @@index([recipientId])
  @@map("notifications")
}

model SystemSetting {
  id        Int      @id @default(autoincrement())
  key       String   @unique
  value     String
  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @updatedAt @map("updated_at")

  @@map("system_settings")
}
